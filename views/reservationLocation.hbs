                    {{@key}}
                </th>
                {{/each}} --}}
                {{!-- Enhancement: swapping handlebar th with listing col names instead --}}
                <th class="customerH">ID резервации локации</th>
                <th class="customerH">Локация</th>
                <th class="customerH">ID резервации</th>
                <th>Удалить</th>
            </tr>

            {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
            {{#each reservationLocationData}}
            <tr data-value={{this.reservationLocationId}}>
                <td>{{this.reservationLocationId}}</td>
                <td>{{this.location}}</td> {{!--location value--}}
                <td>{{this.reservationId}}</td>
                <td><button onclick="deleteReservationLocation({{this.reservationLocationId}})">Удалить</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<div id="reference">
    <h3>Резервации</h3>
    <table id="customerTable" border="1" cellpadding="5">
        <tbody>
            {{!-- For just the first row, we print each key of the row object as a header cell so we
            know what each column means when the page renders --}}
            <tr class="customerCol">
                {{!-- {{#each reservationData.[0]}}
