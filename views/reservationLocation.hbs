</div> <!-- reference -->

<!-- Insert -->
<div id="insert">
    <form id="add-reservationLocation-form">
        <legend><strong>Добавить резервацию локации</strong></legend>
        <fieldset class="fields">
            <label for="location" class="required"> Локация </label>
                <select name="location" id="input-locationId" required>
                    <option value="0">Выберите локацию</option>
                    {{#each locationDropdownData}}
                    <option value="{{this.locationId}}">{{this.location}}</option>
                    {{/each}}
                </select>
            <label for="reservationId" class="required"> ID резервации</label>
                <select name="reservationId" id="input-reservationId" required>
                    <option value="0">Выберите ID резервации</option>
                    {{#each reservationDropdownData}}
                    <option value="{{this.reservationId}}">{{this.reservationId}}</option>
                    {{/each}}
                </select>
            <caption>* поле обязательное для заполнения</caption>
        </fieldset>
        <input class="btn" type="submit" id="addReservationLocation" value="Добавить резервацию локации">
    </form>
</div><!-- insert -->

{{!-- Return to Top button --}}
